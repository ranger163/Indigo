<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleY="1"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mwhCloseColor="@color/colorPrimary"
        app:mwhColorAlpha="0.45"
        app:mwhGradientAngle="45"
        app:mwhProgress="1"
        app:mwhStartColor="@color/colorPrimaryDark"
        app:mwhVelocity="1"
        app:mwhWaveHeight="50dp"
        app:mwhWaves="MultiWave" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/userAvatarImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/droid_sans_arabic"
        android:maxLength="50"
        android:maxLines="1"
        android:text="Ahmed Nassar"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/userAvatarImg"
        app:layout_constraintStart_toStartOf="@id/userAvatarImg"
        app:layout_constraintTop_toBottomOf="@id/userAvatarImg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userTagTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droid_sans_arabic"
        android:maxLength="50"
        android:maxLines="1"
        android:text="\@ranger163"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/usernameTv"
        app:layout_constraintStart_toStartOf="@id/usernameTv"
        app:layout_constraintTop_toBottomOf="@id/usernameTv" />

</androidx.constraintlayout.widget.ConstraintLayout>